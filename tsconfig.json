{
  "compilerOptions": {
      "target": "es2016",
      "sourceMap": false,
      "declaration": false,
      "resolveJsonModule": true,
      "allowJs": true,
      "isolatedModules": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noFallthroughCasesInSwitch": true,
      "skipLibCheck": true,
      "outDir": "./dist"
  },
  "include": [ "src/**/*" ],
  "exclude": [
      "./dist/**/*",
      "./node_modules"
  ]
}